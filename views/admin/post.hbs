<html>
<head>
    {{>head}}
</head>

<body id="edit">

<div class="container-fluid">

    {{>admin_header}}

    <div class="row">
        <div class="col-sm-2">
            {{>profile_nav this}}
        </div>

        <div class="col-sm-10">

            <div class="row">
                <div class="col-sm-6">
                    <form class="form" method="post" action="/admin/post/{{id}}">
                        <div class="form-group">
                            <label for="title">标题</label>
                            <input id="title" class="form-control" name="title" value="{{post.title}}" required="" autofocus="">
                        </div>
                        <textarea name="content" class="form-control" id="content">{{post.content}}</textarea>
                    </form>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>预览</label>
                        <div id="preview"></div>
                    </div>
                </div>

            </div>

            <div class="alert alert-danger" style="display: none;"></div>
            <a class="btn btn-primary pull-right" onclick="save();">保存</a>

            <div id="upload-container" class="upload-container">
                {{#if locals.success}}
                    <div id="alt_success" class="alert alert-success"></div>
                {{/if}}

                {{#if locals.error}}
                    <div id="alt_warning" class="alert alert-warning"></div>
                {{/if}}

                <form class="form-signin" role="form" method="post" enctype="multipart/form-data">
                    <h2 class="form-signin-heading">上传markdown文件</h2>
                    <input type="file" id="fulAvatar" name="fulAvatar" class="form-control" />
                    <br>
                    <button id="butSub" class="btn btn-primary" type="submit">上传</button>
                </form>
            </div>
        </div>
    </div>
</div>

</body>
</html>