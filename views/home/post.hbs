<html>
<head>
    {{>head}}
</head>

<body id="post">

{{>home_header}}

<div class="container content">

    {{#with post}}
        <div class="post">
            <div class="post-heading">
                <h1 class="post-title">{{title}}</h1>

                <div class="post-info">
                    <span class="text-muted">{{detailDate date}}</span>
                    <span class="pull-right"><a href="#comments">{{comments.length}} 个评论</a></span>
                </div>
                <div class="clearfix"></div>
                <hr>
            </div>

            <div class="post-content">
                <script type="text/plain" id="content">{{{content}}}</script>
            </div>
        </div>

        <div id="comments" class="comments">
            <h3>评论</h3>
            <hr>
            {{#each comments}}
                <div class="comment">
                    <a href="/user/{{author.id}}">
                        <img src="{{author.avatar}}" class="img-circle avatar">
                    </a>
                    <span>{{{content}}}</span>
                </div>
                <hr>
            {{/each}}
        </div>
    {{/with}}

    <form class="comments">
        <div class="form-group">
            <div class="OwO"></div>
            <textarea name="content" id="new-comment" class="form-control"></textarea>
            <small style="color: rgb(172,172,172)">* 评论资辞HTML格式</small>
            <div class="alert alert-danger" style="display: none;"></div>
        </div>

        <div class="form-group">
            {{#if req.user}}
                <a class="btn btn-primary" onclick="comment()">发布</a>
            {{else}}
                评论请先 <a class="btn btn-primary" href="/account/login">登录</a>
            {{/if}}
        </div>
    </form>
</div>
{{>foot}}
</body>
</html>